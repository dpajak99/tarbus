<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/content_holder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="10dp"
    android:paddingHorizontal="@dimen/activity_horizontal_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_first"
            style="@style/Tag"
            android:background="@drawable/tag_departure_first"
            android:text="Najbliższy"
            android:textColor="@color/success" />

        <TextView
            android:id="@+id/tv_live"
            style="@style/Tag"
            android:background="@drawable/tag_departure_live"
            android:text="LIVE"
            android:textColor="@color/error" />
        <TextView
            android:id="@+id/tv_offline"
            style="@style/Tag"
            android:background="@drawable/tag_departure_offline"
            android:text="Według rozkładu jazdy"
            android:textColor="@color/lightgray" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/schedule_bus_nr"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/background_rounded_corners_white"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_marginEnd="15dp"
            android:textAlignment="center"
            android:textColor="#000"/>

        <TextView
            android:id="@+id/schedule_bus_dir"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/schedule_bus_departue_time"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:textStyle="bold"
            android:textSize="20sp"
            android:layout_weight="1"
            android:gravity="end" />
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#eeeeee"/>
</LinearLayout>
